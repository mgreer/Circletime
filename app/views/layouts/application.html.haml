%html
  %head
    %title Circletime
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %ul.user_nav
      - if user_signed_in?
        %li= link_to current_user.name, dashboard_path(current_user)       
        %li= link_to "logout", destroy_user_session_path, :method => :delete
      - else
        %li= link_to 'Login with Facebook', '/auth/facebook/'
    %ul
      %li= link_to 'Users', users_path
      %li= link_to 'Jobs', jobs_path
      %li= link_to 'Applications', applications_path
    = yield
