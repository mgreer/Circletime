<!doctype html>
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8" lang="en">
/[if IE 8] <html class="no-js lt-ie9" lang="en">
/ [if gt IE 8]><!

- @main_class = content_for?(:aside) ? "has_aside" : "no_aside"

%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= content_for?(:title) ? yield(:title) : "Circletime"
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:name=>"viewport",:content=>"width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"}
    - if (ENV['RAILS_ENV']=='development')
      = stylesheet_link_tag     "http://f.fontdeck.com/s/css/Ejh9NZvG+vyk1dvMsJtcSfagWLs/localhost/9017.css"
    - elsif (ENV['RAILS_ENV']=='production')
      = stylesheet_link_tag     "http://f.fontdeck.com/s/css/Ejh9NZvG+vyk1dvMsJtcSfagWLs/circletime.herokuapp.com/18062.css"
    = stylesheet_link_tag    "application"
    = csrf_meta_tags
    /[if lt IE 9]
      %script{ :src => "js/libs/html5-3.4-respond-1.1.0.min.js" }
  %body{ :id => to_slug( "#{controller.controller_path}-#{controller.action_name}" ), :class => to_slug( "#{controller.controller_path}" ) }
    #header-container
      %header.wrapper.clearfix
        %h1#title
          = link_to "Circletime", :root
          - if content_for?(:title)
            %span= yield :title
    / #header-container

    #messaging
      - [:notice, :error, :message].each do |key| 
        - unless flash[key].blank? 
          %p{ :class => "flash flash_#{key}" }= flash[key]

    #main-container{:class => @main_class}
      #main.wrapper.clearfix
        %article
          = yield
        - if content_for?(:aside)
          %aside= yield :aside
      / #main
    / #main-container
    #footer-container
      %footer.wrapper
        - if user_signed_in?
          %nav
            %ul
              %li= link_to 'Invite a Friend', new_user_invitation_path
              %li= link_to 'Create a Job', new_job_path
              %li= link_to "Your Circle", circles_path
              %li= link_to "Logout", destroy_user_session_path, :method => :delete       
    / #main-container
        
  = javascript_include_tag  "application"    
