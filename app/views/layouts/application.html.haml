/ [if gt IE 8]><!

- @main_class = content_for?(:aside) ? "has_aside" : "no_aside"

%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= content_for?(:title) ? yield(:title) : "Poppy"
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:name=>"viewport",:content=>"width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"}
    = stylesheet_link_tag     FONTDECK_URL
    = stylesheet_link_tag    "application"
    = csrf_meta_tags
    /[if lt IE 9]
      %script{ :src => "js/libs/html5-3.4-respond-1.1.0.min.js" }
  %body{ :id => to_slug( "#{controller.controller_path}-#{controller.action_name}" ), :class => to_slug( "#{controller.controller_path}" ) }
    #header-container
      %header.wrapper.clearfix
        %h1#title
          = link_to "Poppy", :root
          - if content_for?(:title)
            %span= yield :title
        - if user_signed_in?
          %nav
            %ul
              %li= link_to 'Ask a favor', new_job_path
              %li= link_to 'Invite a friend', new_user_invitation_path
              %li= link_to 'Your friends', circles_path     
    / #header-container
    
    - unless flash.empty? || ( flash[:notice].blank? && flash[:error].blank? && flash[:message].blank? )
      #messaging
        - [:notice, :error, :message].each do |key| 
          - unless flash[key].blank? 
            %p{ :class => "flash flash_#{key}" }= flash[key]

    #main-container{:class => @main_class}
      #main.wrapper.clearfix
        %article
          = yield
        - if content_for?(:aside)
          %aside= yield :aside
      / #main
    / #main-container
    #footer-container
      %footer.wrapper
        - if user_signed_in?
          %nav
            %ul
              %li= link_to "Logout", destroy_user_session_path, :method => :delete
    / #main-container

  :javascript
    var _gaq=[["_setAccount","#{ GOOGLE_ACCOUNT_ID }"],["_trackPageview"],["_trackPageLoadTime"]];
    //since we're in not production, set the domainName to none
    #{Rails.env.production? ? '': "_gaq.push(['_setDomainName', 'none']);"}
    (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.async=1;
    g.src=("https:"==location.protocol?"//ssl":"//www")+".google-analytics.com/ga.js";
    s.parentNode.insertBefore(g,s)}(document,"script"));        
  = javascript_include_tag  "application"    
