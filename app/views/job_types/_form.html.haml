= form_for(@job_type) do |f|
  - if @job_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@job_type.errors.count, "error")
        prohibited this job_type from being saved:
      %ul
        - @job_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
