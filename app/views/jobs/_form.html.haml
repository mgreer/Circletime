= simple_form_for @job do |f|
  = f.error_notification
  .madlibs
    I want babysitting on
    = f.input :date, :as => :ui_date_time_picker  
    at
    = f.input :location, :as => :string
    for
    = f.input :stars, :collection => 1..10, :include_blank => false
    stars.
    %i More info
    %p.more 
      = f.input :description, :as => :string

  .actions
    = f.button :submit